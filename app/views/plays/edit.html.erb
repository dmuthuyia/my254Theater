<div class="col-md-10 col-md-offset-1">
	<div class="new-play-form">

		<h1>Edit Play</h1>

		<%= simple_form_for @play, html: {multipart: true} do |f| %>
			<%= f.file_field :play_img %>
			<%= f.select :category_id, @categories %>
			<%= f.input :title, label: "Play Title" %>
			<%= f.input :description, label: "Rundown" %>
			<%= f.input :director, label: "Directed by" %>
			<%= f.button :submit %>
		<% end %>

	</div>
</div>